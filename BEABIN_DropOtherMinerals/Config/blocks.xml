<configs>
	<!-- 2020/6/28  By 無云 -->
	<!-- 野外的鵝卵石中型, 增加掉落銅素材 -->
	<insertAfter xpath="/blocks/block[@name='rockResource']/property[@name='PassThroughDamage']">
		<drop event="Harvest" name="resourceScrapBrass" count="100" tag="oreWoodHarvest"/>
	</insertAfter>
	<!-- 地形中的鐵礦, 增加掉落銅素材,比例4% -->
	<append xpath="/blocks/block[@name='terrOreIron']">
		<drop event="Harvest" name="resourceScrapBrass" count="4" tag="oreWoodHarvest"/>
	</append>
	<!-- 地形中的鉛礦, 增加掉落銅素材,比例2% -->
	<append xpath="/blocks/block[@name='terrOreLead']">
		<drop event="Harvest" name="resourceScrapBrass" count="1" tag="oreWoodHarvest"/>
	</append>
	<!-- 地形中的硝酸鉀礦, 增加掉落銅素材,比例8% -->
	<append xpath="/blocks/block[@name='terrOrePotassiumNitrate']">
		<drop event="Harvest" name="resourceScrapBrass" count="4" tag="oreWoodHarvest"/>
	</append>
	<!-- 地形中的油頁岩礦, 增加掉落銅素材,比例6% -->
	<append xpath="/blocks/block[@name='terrOreOilDeposit']">
		<drop event="Harvest" name="resourceScrapBrass" count="3" tag="oreWoodHarvest"/>
	</append>
	<!-- 地形中的煤礦, 增加掉落鐵素材,比例2% -->
	<append xpath="/blocks/block[@name='terrOreCoal']">
		<drop event="Harvest" name="resourceScrapIron" count="1" tag="oreWoodHarvest"/>
	</append>
</configs>